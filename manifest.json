{
  "manifest_version": 3,
  "name": "Shorts Be Gone",
  "description": "Removes Shorts from YouTube pages",
  "version": "1.0",
  "icons": {
    "16": "./icon-16.png",
    "32": "./icon-32.png",
    "48": "./icon-48.png",
    "128": "./icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {}
}